{
    "name": "fluvial",
    "version": "0.4.7",
    "description": "Fluvial:  A light http/2 server framework, similar to Express",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*",
        "README.md"
    ],
    "type": "module",
    "scripts": {
        "ex": "node --import ./register-ts-esm.js",
        "compile": "tsc --project tsconfig.src.json",
        "test": "pnpm ex -- --test **/*.test.ts",
        "test:coverage": "pnpm ex --test --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=dist/lcov.info --test-reporter=tap --test-reporter-destination=dist/tap.info src/**/*.test.ts",
        "prepublish": "pnpm test run && pnpm compile"
    },
    "keywords": [
        "http/2",
        "http2",
        "stream",
        "server",
        "back-end",
        "backend"
    ],
    "author": {
        "email": "sskeen9@gmail.com",
        "name": "Samuel Skeen",
        "url": "https://github.com/cwadrupldijjit"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/fluvialjs/fluvial.git",
        "directory": "packages/core"
    },
    "license": "GPL-3.0-only",
    "devDependencies": {
        "@types/node": "catalog:",
        "pnpm": "catalog:",
        "ts-node": "catalog:",
        "typescript": "catalog:"
    },
    "dependencies": {
        "mime": "^4.0.4"
    }
}
