        "url": "https://github.com/cwadrupldijjit"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/fluvialjs/fluvial.git",
        "directory": "packages/csp"
    },
    "license": "GPL-3.0-only",
    "devDependencies": {
        "@types/node": "catalog:",
        "typescript": "catalog:"
    },
