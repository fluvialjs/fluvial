    },
    "license": "GPL-3.0-only",
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^22.4.1",
        "ansi-colors": "^4.1.3",
        "pnpm": "^9.7.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4"
    },
    "dependencies": {
        "mime": "^4.0.4"
